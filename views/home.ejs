<%-include('partials/header.ejs')-%>

<h1>Home</h1>
<%=startingContent%>

<div class="overflow-content">

<% posts.forEach(function(post){%>
  <h2><%=post.title%></h2>
  <% if (post.content.length > 100) { %>
  <p>
    <%=post.preview%>
    <a href="/post/<%=post.title%>">Read More</a>

  </p>

<% } else { %>
<p>
  <%=post.content%>
</p>

<% }})%>
</div>

<%-include('partials/footer.ejs')-%>
